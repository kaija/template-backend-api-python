# =============================================================================
# SECRETS CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .secrets.toml and update with your actual secrets
# NEVER commit .secrets.toml to version control!
# This is a generic template - customize for your application needs

# =============================================================================
# DEVELOPMENT SECRETS
# =============================================================================
[development]
# Database credentials - customize for your application
database_url = "postgresql+asyncpg://postgres:dev_password@localhost:5432/your_app_dev"

# JWT secret key (generate with: openssl rand -hex 32)
secret_key = "development-secret-key-replace-with-secure-random-key"

# Redis connection
redis_url = "redis://localhost:6379/0"

# External service API keys (customize for your needs)
# your_service_api_key = "your-service-api-key"
# another_service_key = "another-service-key"

# =============================================================================
# STAGING SECRETS
# =============================================================================
[staging]
# Database credentials
database_url = "postgresql+asyncpg://app_user:staging_password@staging-db:5432/your_app_staging"

# JWT secret key
secret_key = "staging-secret-key-should-be-different-from-dev-and-prod"

# Redis connection
redis_url = "redis://staging-redis:6379/0"

# Error tracking (optional)
sentry_dsn = "https://your-sentry-dsn@sentry.io/your-staging-project-id"

# External service API keys (customize for your needs)
# your_service_api_key = "staging-service-api-key"
# another_service_key = "staging-service-key"

# =============================================================================
# PRODUCTION SECRETS
# =============================================================================
[production]
# Database credentials
database_url = "postgresql+asyncpg://app_user:super_secure_password@prod-db:5432/your_app_production"

# JWT secret key (MUST be cryptographically secure)
secret_key = "production-secret-key-must-be-cryptographically-secure-and-unique"

# Redis connection
redis_url = "redis://prod-redis:6379/0"

# Error tracking (optional)
sentry_dsn = "https://your-sentry-dsn@sentry.io/your-production-project-id"

# External service API keys (customize for your needs)
# your_service_api_key = "production-service-api-key"
# another_service_key = "production-service-key"

# Cloud provider credentials (if needed)
# aws_access_key_id = "your-aws-access-key"
# aws_secret_access_key = "your-aws-secret-key"
# aws_s3_bucket = "your-production-bucket"

# Email service configuration (if needed)
# smtp_host = "smtp.your-provider.com"
# smtp_port = 587
# smtp_username = "your-smtp-username"
# smtp_password = "your-smtp-password"

# =============================================================================
# TEST SECRETS
# =============================================================================
[test]
# Test database (separate from development)
database_url = "postgresql+asyncpg://postgres:test_password@localhost:5432/your_app_test"
test_database_url = "postgresql+asyncpg://postgres:test_password@localhost:5432/your_app_test"

# Test-specific secret key
secret_key = "test-secret-key-for-testing-only-not-secure"

# Test Redis
redis_url = "redis://localhost:6379/1"

# Disable external services in tests
sentry_dsn = ""